---
interface Props {
  image: string;
  title: string;
  poptext?: string;
  subtitle?: string;
}

const {image, title, poptext, subtitle} = Astro.props;
import Button from "../components/button.astro";
---

<div class="card">
  <img src={image} alt={title} />
  <div class="overlay"></div>
  <div class="badge">
    <Button title="90 dage" variant="primary"/>
  </div>
  <div class="content">
    
    {poptext && <p class="popup"> {poptext}</p>}
    <h3>{title}</h3>
    <p>{subtitle}</p>
  </div>
</div>

<style>

  .badge {
  position: absolute;
  top: 20px;
  left: -120px;
  z-index: 10;x
}


.card {
  position: relative;
  width: 320px;
  height: 420px;
  border-radius: 15px;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.card:hover {
  transform: scale(1.03);
}

.card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.75),
    rgba(0, 0, 0, 0.2)
  );
}

.content {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  color: white;
}

.content h3 {
  margin-bottom: 6px;
  font-size: 22px;
  font-weight: 700;
  line-height: 1.2;
}

.content p {
  font-size: 14px;
  opacity: 0.9;
}

.popup {
  background-color: rgb(86, 187, 226);
  width: fit-content;
  border-radius: 5px;
  padding: 0.3rem 0.8rem;
  margin-bottom: 5px;
}

</style>
