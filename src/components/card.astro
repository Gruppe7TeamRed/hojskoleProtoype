---
interface Props {
  image: string;
  title: string;
  duration?: string;
  subtitle?: string;
}

const {
  image,
  title,
  duration = "90 dage",
  subtitle = "Se afgange"
} = Astro.props;
---

<div class="card">
  <img src={image} alt={title} class="card-img" />

  <div class="overlay"></div>

  <div class="badge">{duration}</div>

  <div class="content">
    <h3>{title}</h3>
    <p>{subtitle}</p>
  </div>
</div>

<style>
.card {
  position: relative;
  width: 320px;
  height: 420px;
  border-radius: 20px;
  overflow: hidden;
  cursor: pointer;
}

.card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.7),
    rgba(0, 0, 0, 0.2)
  );
}

.badge {
  position: absolute;
  top: 16px;
  left: 16px;
  background: #f97316; /* orange */
  color: white;
  padding: 6px 12px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 14px;
}

.content {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  color: white;
}

.content h3 {
  margin: 0 0 6px;
  font-size: 22px;
  font-weight: 700;
  line-height: 1.2;
}

.content p {
  margin: 0;
  font-size: 14px;
  opacity: 0.85;
}
</style>
